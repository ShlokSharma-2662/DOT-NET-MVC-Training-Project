
@{
    ViewBag.Title = "UserRecord";
}
@Scripts.Render("~/bundles/JS/UserRecord")


<style type="text/css">
    .fa-sort, .fa-edit, .fa-check-square, .fa-times-circle {
        color: teal;
        cursor: pointer;
    }
    .fa {
        color: teal;
    }
    
    #ManagePager li:hover {
        cursor: pointer;
    }h2{
         color : teal;
     }

</style>
<br />
<br />
<br />

<center><h2><i class="fa fa-users"></i> Member Records</h2></center>
<div class="container" >
    <hr />
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span>First Name:</span><br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input id="TxtFNameSearch" type="text" placeholder="Enter First Name Here.." maxlength="20" class="form-control" />
                </div>
                <small id="TxtFNameSearchValidate"></small>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span>Last Name:</span><br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input id="TxtLNameSearch" type="text" placeholder="Enter Last Name Here.." maxlength="20" class="form-control" />
                </div>
                <small id="TxtLNameSearchValidate"></small>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span><i class="fa fa-phone"></i> Contact No.:</span><br />
                <div class="input-group">
                    <span class="input-group-addon">+91-</span>
                    <input id="TxtContactNoSearch" type="text" placeholder="Enter Contact No. Here.." maxlength="10" class="form-control" />
                </div>
                <small id="TxtContactNoSearchValidate"></small>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span>Email Id:</span><br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input id="TxtEmailIdSearch" type="text" placeholder="Enter Email Id Here.." maxlength="50" class="form-control" />
                </div>
                <small id="TxtEmailIdSearchValidate"></small>
            </div>
        </div>
    </div><hr />
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span>First Name:</span><br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input id="TxtFNameSearchByButton" type="text" placeholder="Enter First Name Here.." maxlength="20" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span>Last Name:</span><br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input id="TxtLNameSearchByButton" type="text" placeholder="Enter Last Name Here.." maxlength="20" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span><i class="fa fa-phone"></i> Contact No.:</span><br />
                <div class="input-group">
                    <span class="input-group-addon">+91-</span>
                    <input id="TxtContactNoSearchByButton" type="text" placeholder="Enter Contact No. Here.." maxlength="10" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                <span>Email Id:</span><br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input id="TxtEmailIdSearchByButton" type="text" placeholder="Enter Email Id Here.." maxlength="50" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group text-right">
            <a id="BtnSearchByAll" style="margin-right:20px;" class="btn btn-primary"><i class="fa fa-search" style="color:black;" ></i>&nbsp; Search By All Parameters</a>
        </div>
    </div><hr />
    <div class="row">
        <a class="pull-right" id="ClearAllLink"><i class="fa fa-2x fa-trash"></i> Clear All</a>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <hr />
            <table class="table table-striped table-border table-hover">
                <thead>
                    <tr>
                        <th>
                            Sr. No.:
                        </th>
                        <th>
                            <i class="fa fa-sort" id="FirstNameSortingLink"></i> First Name:
                        </th>
                        <th>
                            <i class="fa fa-sort" id="LastNameSortingLink"></i> Last Name:
                        </th>
                        <th>
                            Contact No:
                        </th>
                        <th>
                            <i class="fa fa-sort" id="EmailIdSortingLink"></i> Email Id:
                        </th>
                        <th>
                            <i class="fa fa-sort" id="GenderSortingLink"></i> Gender:
                        </th>

                        <th>
                            Edit Record
                        </th>

                        <th>
                            View Status
                        </th>
                    </tr>
                </thead>
                <tbody id="UserTableBody">
                </tbody>
            </table>
        </div>
    </div><hr />
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
            <span style="color:red;font-weight:bold;font-size:18px;">Records / Page:</span>
            <select id="DDL_PageCounter" class="form-control">
                <option value="100">- All Records -</option>
                <option value="3">3</option>
                <option value="5">5</option>
                <option value="8">8</option>
                <option value="10">10</option>
                <option value="12">12</option>
                <option value="15">15</option>
                <option value="18">18</option>
                <option value="20">20</option>
                <option value="25">25</option>
            </select>
        </div>
        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9 text-right">
            <ul class="pagination" id="ManagePager">
            </ul>
        </div>
    </div>


</div>

<div class="modal fade" id="EditUserRecord" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title"><i class="fa fa-edit"></i> Update Member Record</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <span>First Name:</span><br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input name="TxtFName" id="TxtFName" type="text" placeholder="Enter First Name Here.." maxlength="20" class="form-control" />
                            </div>
                            <small id="TxtFNameValidate" class="text-danger"></small>
                        </div>
                        <div class="form-group">
                            <span>Last Name:</span><br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input name="TxtLName" id="TxtLName" type="text" placeholder="Enter Last Name Here.." maxlength="20" class="form-control" />
                            </div>
                            <small id="TxtLNameValidate" class="text-danger"></small>
                        </div>
                        <div class="form-group">
                            <span><i class="fa fa-phone"></i> Contact No.:</span><br />
                            <div class="input-group">
                                <span class="input-group-addon">+91-</span>
                                <input name="TxtContactNo" id="TxtContactNo" type="text" placeholder="Enter Contact No. Here.." maxlength="10" class="form-control" />
                            </div>
                            <small id="TxtContactNoValidate" class="text-danger"></small>
                        </div>
                        <div class="form-group">
                            <span>Email Id:</span><br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input name="TxtEmailId" id="TxtEmailId" type="text" placeholder="Enter Email Id Here.." maxlength="50" class="form-control" />
                            </div>
                            <small id="TxtEmailIdValidate" class="text-danger"></small>
                        </div>
                        <div class="form-group">
                            <span>Gender:</span><br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-male"></i> | <i class="fa fa-female"></i></span>
                                <select id="DDL_Gender" class="form-control">
                                    <option value='M'>Male</option>
                                    <option value='F'>Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group text-right">
                            <a id="BtnUpdateRecord" class="btn btn-primary"><i class="fa fa-edit" style="color:white!important"></i> Update</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
